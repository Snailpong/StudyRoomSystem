<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studyroomsystem.RegisterActivity">

    <TextView
        android:id="@+id/text_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/edit_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/text_building"
        />

    <TextView
        android:id="@+id/text_classNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_building"
        android:layout_alignLeft="@+id/text_building"
        />

    <EditText
        android:id="@+id/edit_classNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_classNumber"
        android:layout_alignBottom="@+id/text_classNumber"
        android:layout_alignEnd="@+id/edit_building"
        android:layout_toEndOf="@+id/text_classNumber" />

    <TextView
        android:id="@+id/text_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_classNumber"
        android:layout_alignLeft="@+id/text_classNumber"
        />

    <EditText
        android:id="@+id/edit_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_capacity"
        android:layout_alignBottom="@+id/text_capacity"
        android:layout_toEndOf="@+id/text_capacity" />

    <TextView
        android:id="@+id/text_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_capacity"
        android:layout_alignLeft="@+id/text_capacity"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/text_current"
        android:layout_marginTop="20dp"
        android:background="#AAAAAA"/>

    <TextView
        android:id="@+id/text_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/text_classNumber"
        android:layout_below="@+id/line1"/>

    <CheckBox
        android:id="@+id/check_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/text_sort"
        android:layout_alignBottom="@+id/text_sort"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/text_sort" />


    <CheckBox
        android:id="@+id/check_classNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClassNumber"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/check_building"
        android:layout_alignBottom="@+id/text_sort"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/text_sort" />


    <CheckBox
        android:id="@+id/check_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/check_classNumber"
        android:layout_alignBottom="@+id/text_sort"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/text_sort" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AFEEEE"
        android:text="View"
        android:layout_alignBaseline="@+id/check_capacity"
        android:layout_alignBottom="@+id/check_capacity"
        android:layout_alignStart="@+id/btn_update" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/text_sort"
        android:layout_marginTop="20dp"
        android:background="#AAAAAA"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_below="@+id/line2"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ListView
            android:id="@+id/db_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </ScrollView>

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="#AFEEEE"
        android:text="Insert"
        android:layout_above="@+id/edit_capacity"
        android:layout_alignEnd="@+id/scroll_view" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="#AFEEEE"
        android:layout_alignStart="@+id/btn_insert" />
</RelativeLayout>